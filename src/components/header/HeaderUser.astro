---
const links = [
	{ link: '/protected/my-user', content: 'my user' },
	{ link: '/protected/my-user/todo-app', content: 'TODOS' },
	{
		link: '/protected/my-user/publics',
		content: 'Publics',
	},
];

---

<div
	class="flex flex-col items-center w-10 md:w-96 pb-4 self-start"
>
	{
		links.map((data) => (
			<a
				class="btn btn-outline btn-secondary my-2 w-full mx-1"
				href={data.link}
			>
				{data.content}
			</a>
		))
	}
</div>
